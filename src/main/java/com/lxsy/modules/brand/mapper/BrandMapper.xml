<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxsy.modules.brand.mapper.BrandMapper">

    <resultMap id="BaseResultMap" type="com.lxsy.modules.brand.entity.Brand">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="brandNumber" column="brand_number" jdbcType="VARCHAR"/>
        <result property="brandName" column="brand_name" jdbcType="VARCHAR"/>
        <result property="brandImage" column="brand_image" jdbcType="VARCHAR"/>
        <result property="brandProveImage" column="brand_prove_image" jdbcType="VARCHAR"/>
        <result property="jointDeclaration" column="joint_declaration" jdbcType="VARCHAR"/>
        <result property="brandStatus" column="brand_status" jdbcType="TINYINT"/>
        <result property="tenantCode" column="tenant_code" jdbcType="VARCHAR"/>
        <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="isShow" column="is_show" jdbcType="TINYINT"/>
    </resultMap>

    <select id="selectAll" resultMap="BaseResultMap">
        select id,
               brand_number,
               brand_name,
               brand_image,
               brand_prove_image,
               joint_declaration,
               brand_status,
               tenant_code,
               is_deleted,
               create_time,
               update_time,
               is_show,
               keyword
        from husj.lxsy_brand
        where is_deleted = 0
          and is_show = 1
    </select>

</mapper>
